<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receipts.ReceiptInfoDialog">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            app:title="Receipt Info" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:id="@+id/llmerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/receipt_info_merchant_icon"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_store_24" />

            <TextView
                android:id="@+id/tvMerchantName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:textColor="@color/purple_700"
                android:text="TESTO"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReceiptNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="2069/04/20 4:20 PM"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSplitedAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llmerchant"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Splited Amount(s):"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSplitAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="100.50"
                android:textSize="18dp"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvReceiptImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llSplitedAmt"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/receipt_info_receipt_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/ic_baseline_receipt_long_24" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvImportantDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llAddedBy"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.5"
            android:textColor="@color/orangeDarkColor"
            android:text="Important Dates :"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/llReturnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvImportantDates">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvReceiptImage"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Return Period: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvReturnPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="2022/02/16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llReturnDate">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvReceiptImage"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Expiration Date: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvExpirationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="2022/02/30"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llAddedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvReceiptImage"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Added by "
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvAddedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Amir"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvReceiptImage"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.5"
            android:text="2022/02/02 - 13:54"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/receipt_info_view_items"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/receipt_info_delete"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="45dp"
            android:text="View Items" />

        <Button
            android:id="@+id/receipt_info_delete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="50dp"
            android:text="Delete" />

        <Button
            android:id="@+id/receipt_info_add_important_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/receipt_info_edit"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="45dp"
            android:text="Add Date" />

        <Button
            android:id="@+id/receipt_info_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp"
            android:text="Edit" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>