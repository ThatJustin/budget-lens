<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receipts.ReceiptSplitFriendSelect">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            app:title="Receipts"/>

        <TextView
            android:id="@+id/total_items_cost_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/choose_friends"
            android:textColor="#6750A4"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/horizontal_line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AB9494"
            app:layout_constraintBottom_toTopOf="@+id/items_cost" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friends_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true"
                android:padding="10dp"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/horizontal_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AB9494"
        app:layout_constraintBottom_toTopOf="@+id/items_cost" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/items_cost"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFFBFE"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:strokeColor="@android:color/transparent"
        app:titleCentered="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/split_by_total"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/split_total"
                android:textSize="12sp"
                android:layout_marginEnd="80dp"
                app:backgroundTint="@color/purple"/>

            <Button
                android:id="@+id/split_by_item"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/split_item"
                android:textSize="12sp"
                app:backgroundTint="@color/purple"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav_menu" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabut"
        app:tint="@color/white"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:backgroundTint="@color/purple"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/budget"
        app:fabCustomSize="80dp"
        app:maxImageSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>