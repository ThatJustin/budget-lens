<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friend_waiting_approval_cards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@android:color/transparent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/friend_card_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:cardElevation="3dp"
            android:layout_weight="5"
            android:background="@color/purple_300"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@android:color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_300"
                android:orientation="horizontal"
                android:weightSum="5">


                <Button
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/friend_initial"
                    android:layout_height="match_parent"
                    android:layout_width="10dp"
                    android:text="@string/friend_initial"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textColor="@color/purple_300"
                    />

                <LinearLayout
                    android:id="@+id/friends_name_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2.5"
                    android:background="@color/purple_300"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/friend_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:letterSpacing="0.01"
                            android:text="@string/friend_first_name"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/friend_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/friend_last_name"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:text="Waiting For Approval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        />

                </LinearLayout>



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>