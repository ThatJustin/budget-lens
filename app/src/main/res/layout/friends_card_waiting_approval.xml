<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friends_sending_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:id="@+id/friends_icon"
        android:layout_width="80dp"
        android:background="@color/purple_300"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:drawableStart="@drawable/ic_baseline_photo_24"
            android:scaleX="1.5"
            android:scaleY="1.5" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/friends_sending_card_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/purple_300"

        >
        <LinearLayout
            android:id="@+id/friends_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/friend_first_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="@string/friend_first_name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/friend_last_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="@string/friend_first_name"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting For Approval"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>



</com.google.android.material.card.MaterialCardView>
