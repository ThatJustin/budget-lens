<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mainlayouts"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="UserProfile"
        android:textSize="26sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:stretchColumns="0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:gravity="left"

            android:text="First Name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="left"
            android:layout_marginStart="10dp"
            android:text="Last name" />
    </TableRow>

    <TableRow
        android:layout_width="385dp"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/firstName_edit"
            android:layout_width="179dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:inputType="text"
            android:hint="first name"
            android:ems="10"
            android:stretchColumns="0" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="182dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:inputType="text"
            android:hint="last name"
            android:ems="10"
            android:stretchColumns="1" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="left"
            android:layout_marginStart="10dp"
            android:text="email"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_baseline_mail_24"
            android:gravity="left"
            android:ems="10"
            android:hint="123456@gmail.com"
            android:inputType="textEmailAddress"
            />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left"
            android:layout_marginStart="10dp"
            android:text="Phone Number" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/call_48px"
            android:gravity="left"
            android:ems="10"
            android:hint="514-332-4556"
            android:inputType="phone" />
    </TableRow>

    <Button
        android:id="@+id/confirm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:text="CONFIRM CHANGES"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="657dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="657dp" />
</TableLayout>