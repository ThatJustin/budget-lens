<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addSubCategoryPopUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up"
    tools:context=".category.AddSubCategoryPopUpActivity"
    >

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <TextView
        android:id="@+id/subCategoryTitle"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="@string/new_sub_category"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_icon" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="275dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="Please Choose Parent Category:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/subCategoryTitle"
        app:layout_constraintStart_toStartOf="@+id/subCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/subCategoryTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="275dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="Please Input Sub Category Name:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/chooseCategory"
        app:layout_constraintStart_toStartOf="@+id/chooseCategory"
        app:layout_constraintTop_toBottomOf="@+id/chooseCategory" />

    <Spinner
        android:id="@+id/chooseCategory"
        style="Widget.AppCompat.Spinner.DropDown.ActionBar"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newCategoryName"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:hint="Category Name"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/categoryNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="50px"
            android:textAlignment="center"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DED5EA"
        android:text="@android:string/cancel"
        android:textColor="@color/purple_300"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/confirm_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCategoryName" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DED5EA"
        android:text="Confirm"
        android:textColor="@color/purple_300"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel_button"
        app:layout_constraintTop_toBottomOf="@+id/newCategoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>

