<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addSubCategoryPopUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up"
    tools:context=".category.AddSubCategoryPopUpActivity">

    <TextView
        android:id="@+id/subCategoryTitle"
        android:layout_width="259dp"
        android:layout_height="41dp"
        android:layout_marginTop="50dp"
        android:text="@string/new_sub_category"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="237dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Please Choose Parent Category:"
        app:layout_constraintStart_toStartOf="@+id/subCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/subCategoryTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="237dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="Please Input Sub Category Name:"
        app:layout_constraintStart_toStartOf="@+id/chooseCategory"
        app:layout_constraintTop_toBottomOf="@+id/chooseCategory" />

    <Spinner
        android:id="@+id/chooseCategory"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="256dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="255dp"
        android:layout_height="38dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="449dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>