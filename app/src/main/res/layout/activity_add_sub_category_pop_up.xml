<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addSubCategoryPopUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up"
    tools:context=".category.AddSubCategoryPopUpActivity"
    >

    <TextView
        android:id="@+id/subCategoryTitle"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="@string/new_sub_category"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="275dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="Please Choose Parent Category:"
        android:textAlignment="center"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="@+id/subCategoryTitle"
        app:layout_constraintStart_toStartOf="@+id/subCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/subCategoryTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="275dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="Please Input Sub Category Name:"
        android:textAlignment="center"
        android:textSize="50px"

        app:layout_constraintEnd_toEndOf="@+id/chooseCategory"
        app:layout_constraintStart_toStartOf="@+id/chooseCategory"
        app:layout_constraintTop_toBottomOf="@+id/chooseCategory" />

    <Spinner
        android:id="@+id/chooseCategory"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newCategoryName"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:hint="Category Name"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/categoryNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50px"
            android:textAlignment="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/createNewCategory"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_300"
        android:text="@string/create"
        android:textSize="50px"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCategoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>

