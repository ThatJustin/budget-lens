<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetLens" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="ItemSortChipStyle">@style/ItemSortChipStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!--window frame -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--add a shadow  -->
        <item name="android:windowIsTranslucent">false</item><!--half transparent-->
        <!-- Disappear when clicking somewhere else -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!-- dim:blurry background when pop up the dialog -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- background transparent -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="fullscreendialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ReceiptItemDialog" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="Hyperlink">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

    <style name="Theme.BudgetLens.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BudgetLens.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BudgetLens.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BudgetLens.AddSubCategoryPopUp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Theme.BudgetLens.DeleteSubCategoryPopUp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Theme.BudgetLens.EditCategoryPopUp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ItemSortDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="ItemSortChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">#1D192B</item>
    </style>

    <style name="ReceiptsSortDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="ReceiptsSortChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">#1D192B</item>


    </style>

    <style name="AllChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">#6750A4</item>
        <item name="checkedIconTint">#FFFFFF</item>

    </style>

    <style name="LabelTextStyle" parent="TextAppearance.Material3.LabelMedium">
        <!--        <item name="android:textColor">@color/black</item>-->
        <!--        <item name="android:fontFamily">@font/font_family_roboto</item>-->
    </style>
</resources>